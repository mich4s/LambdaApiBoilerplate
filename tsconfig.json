{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": false,
    "baseUrl": ".",
    "outDir": ".build/src",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "target": "es2017",
    "lib": [
      "es2017",
      "es6"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "config/**/*"
  ]
}
